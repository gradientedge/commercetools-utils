{
  "name": "@gradientedge/commercetools-utils",
  "version": "0.0.0-development",
  "description": "Provide utility classes and functions for interacting with the commercetools API",
  "main": "dist/index.js",
  "scripts": {
    "cz": "cz",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "watch": "tsc --watch",
    "lint": "eslint './src/**/*.ts' --max-warnings=0",
    "prepare": "husky install",
    "prettier": "prettier --check \"**/*.{ts,js,json,graphql}\"",
    "prettify": "prettier --write \"**/*.{ts,js,json,graphql}\"",
    "test": "TZ=UTC jest --passWithNoTests --runInBand",
    "validate": "npm run prettier && npm run lint && npm run test",
    "docs": "typedoc",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gradientedge/commercetools-utils.git"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "commercetools",
    "utils"
  ],
  "author": "GradientEdge",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gradientedge/commercetools-utils/issues"
  },
  "homepage": "https://github.com/gradientedge/commercetools-utils#readme",
  "devDependencies": {
    "@sinonjs/fake-timers": "^9.1.0",
    "@types/jest": "^27.4.0",
    "@types/json-stringify-safe": "^5.0.0",
    "@types/lodash": "^4.14.178",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/node": "17.0.16",
    "@types/node-fetch": "^3.0.2",
    "@types/qs": "^6.9.7",
    "@types/sinonjs__fake-timers": "^8.1.1",
    "@types/traverse": "^0.6.32",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "codecov": "^3.8.3",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-matcher-specific-error": "^1.0.0",
    "jest-mock": "^27.5.1",
    "nock": "^13.2.4",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typedoc": "^0.22.11",
    "typescript": "~4.5.5"
  },
  "dependencies": {
    "@commercetools/platform-sdk": "^2.4.1",
    "axios": "^0.25.0",
    "esbuild": "^0.14.11",
    "json-stringify-safe": "^5.0.1",
    "lodash.clonedeep": "^4.5.0",
    "qs": "^6.10.3",
    "traverse": "^0.6.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}

    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.0.1",
    "nock": "^13.0.11",
    "prettier": "^2.3.0",
    "semantic-release": "^17.4.3",
    "ts-jest": "^27.0.1",

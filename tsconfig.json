{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "outDir": "./dist/mjs",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "noEmit": false,
    "experimentalDecorators": true,
    "types": ["node", "jest", "jest-extended", "jest-matcher-specific-error"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "./src/lib/**/*.ts",
  ],
  "typedocOptions": {
    "entryPoints": ["src/lib/index.ts",],
    "out": "docs",
    "excludePrivate": false,
    "readme": "src/lib/auth/README.md"
  }
}
